{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "typed-router.d.ts",
    "generate-env-types.js"
  ],
  "compilerOptions": {
    "noEmit": true,
    // "outDir": "./node_modules/.vue-build",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowJs": true,
    "checkJs": true,
    "rootDir": "..",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "unplugin-vue-router/client"]
  }
}
