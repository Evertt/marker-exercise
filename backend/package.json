{
  "name": "marker-exercise-backend",
  "author": "Evert van Brussel",
  "version": "0.0.0",
  "private": true,
  "description": "The express backend server",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run server:dev\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "server": "node dist/backend/src/index.js",
    "server:dev": "nodemon dist/backend/src/index.js",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongodb": "^6.6.2",
    "mongoose": "^8.3.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/method-override": "^0.0.35",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.1",
    "ts-node": "^10.9.2",
    "type-fest": "^4.18.3",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.5",
    "eslint": "^8.57.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "typescript": "~5.4.0"
  }
}
